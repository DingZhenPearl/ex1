{
  "name": "programming-practice",
  "displayName": "Programming Practice",
  "description": "A VS Code extension for C++ programming practice",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Education",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "programming-practice",
          "title": "编程练习",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "programming-practice": [
        {
          "id": "problemList",
          "name": "题目列表",
          "type": "tree",
          "icon": ""
        },
        {
          "id": "programmingPracticeView",
          "name": "代码编辑",
          "type": "webview",
          "icon": ""
        }
      ]
    },
    "commands": [
      {
        "command": "programming-practice.submit",
        "title": "提交答案"
      },
      {
        "command": "programming-practice.startPractice",
        "title": "开始练习"
      },
      {
        "command": "programming-practice.login",
        "title": "登录编程练习平台"
      },
      {
        "command": "programming-practice.logout",
        "title": "注销编程练习平台"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "programming-practice.login",
          "when": "view == problemList && !programming-practice.isLoggedIn",
          "group": "navigation"
        },
        {
          "command": "programming-practice.logout",
          "when": "view == problemList && programming-practice.isLoggedIn",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "C++ Programming Practice",
      "properties": {
        "programmingPractice.compilerPath": {
          "type": "string",
          "default": "g++",
          "description": "Path to the C++ compiler (g++)"
        },
        "programmingPractice.compilerArgs": {
          "type": "array",
          "default": [
            "-std=c++11"
          ],
          "description": "Additional compiler arguments"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vsce": "^1.87.1",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^2.7.0"
  }
}
